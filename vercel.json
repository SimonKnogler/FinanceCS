{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|svg|ico|webp|json|txt|woff|woff2|map))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

